{
  "suggest.triggerCompletionWait": 300,
  "suggest.autoTrigger": "trigger",
  "suggest.maxCompleteItemCount": 30,
  "suggest.noselect": true,
  "suggest.removeDuplicateItems": true,

  "diagnostic.messageDelay": 500,
  "diagnostic.enableSign": true,
  "diagnostic.enableHighlightLineNumber": true,
  // "diagnostic.checkCurrentLine": true,
  "diagnostic.infoSign": "?",
  "diagnostic.warningSign": "!",
  "diagnostic.errorSign": "x",
  "diagnostic.virtualText": true,
  "diagnostic.virtualTextPrefix": " --> ",

  "languageserver": {
    "golang": {
      "command": "gopls",
      "filetypes": ["go"],
      "rootPatterns": ["go.mod", ".vim/", ".git/", ".hg/"]
    } ,
    "sh": {
      "command": "bash-language-server",
      "args": ["start", "--stdio"],
      "filetypes": ["sh"],
      "ignoredRootPaths": ["~"]
    }
  },

  "diagnostic-languageserver.linters": {
    "languagetool": {
      "command": "languagetool",
      "filetypes": [],
      "debounce": 200,
      "args": ["-"],
      "offsetLine": 0,
      "offsetColumn": 0,
      "sourceName": "languagetool",
      "formatLines": 2,
      "formatPattern": [
        "^\\d+?\\.\\)\\s+Line\\s+(\\d+),\\s+column\\s+(\\d+),\\s+([^\\n]+)\nMessage:\\s+(.*)$",
        {
          "line": 1,
          "column": 2,
          "message": [4, 3]
        }
      ]
    }
  },

  "diagnostic-languageserver.filetypes": {
    "markdown": [ "write-good", "markdownlint" ],
    "ruby": [ "solargraph" ],
    "javascript": [ "eslint" ],
    "sh": "shellcheck"
  },

  "eslint.filetypes": [
    "javascript",
    "javascript.jsx",
    "javascriptreact"
  ],
  "eslint.autoFix": true,
  "eslint.autoFixOnSave": false,

  // "solargraph.useBundler": true,
  // "solargraph.bundlerPath": "/Users/eldar/.asdf/shims/bundle",
  // "solargraph.transport": "external",
  "solargraph.diagnostics": true,
  "solargraph.hover": true,
  "solargraph.autoformat": true,
  "solargraph.definitions": true,
  "solargraph.completion": true,
  "solargraph.references": true,
  "solargraph.formatting": true
}
